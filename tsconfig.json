{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "types": ["node"],
      "baseUrl": ".",
      "paths": {
        "src/*": ["./src/*"]
      }
    },
    "include": [
      "src/**/*",
      "vitest/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }